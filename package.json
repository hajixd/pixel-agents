{
  "name": "arcadia",
  "displayName": "Arcadia",
  "description": "Arcadia VS Code Extension",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.109.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "arcadia.showPanel",
        "title": "Arcadia: Show Panel"
      }
    ],
    "viewsContainers": {
      "panel": [
        {
          "id": "arcadia-panel",
          "title": "Arcadia",
          "icon": "$(window)"
        }
      ]
    },
    "views": {
      "arcadia-panel": [
        {
          "type": "webview",
          "id": "arcadia.panelView",
          "name": "Arcadia"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "build:webview": "cd webview-ui && npm run build",
    "compile": "npm run check-types && npm run lint && node esbuild.js && npm run build:webview",
    "build": "npm run compile",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production && npm run build:webview",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "import-tileset": "tsx scripts/import-tileset.ts"
  },
  "devDependencies": {
    "@types/node": "22.x",
    "@types/pngjs": "^6.0.5",
    "@types/vscode": "^1.109.0",
    "esbuild": "^0.27.2",
    "eslint": "^9.39.2",
    "npm-run-all": "^4.1.5",
    "pngjs": "^7.0.0",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.54.0"
  }
}
